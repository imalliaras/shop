<%- include('../includes/start.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <form action="/admin/product" method="POST" class="product-form">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" placeholder="Add a product">
            </div>
            <div class="form-control">
                <label for="image">Image Url</label>
                <input type="text" name="image" id="image" placeholder="Add an image url">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="text" name="price" id="price" placeholder="Add a price">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" placeholder="Add a description" rows="10"></textarea>
            </div>
            <button type="submit" class="btn">Submit</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>

